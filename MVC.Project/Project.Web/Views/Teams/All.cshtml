@using Project.Models.ViewModels
@using System.Security.Claims;
@model List<TeamsViewModel>
@{
    ViewData["Title"] = "Teams";
}

@if (Model.Any())
{
    <h2>All Teams</h2>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Fans</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in Model)
            {
                <tr>
                    <td>
                        @team.Name
                    </td>
                    <td>
                        @team.FansCount
                    </td>
                    <td>
                        <form method="post">
                            @if (team.HasFavouriteTeam)
                            {

                                @if (team.Fans.FirstOrDefault(f => f.Id == this.User.FindFirstValue(ClaimTypes.NameIdentifier)) != null)
                                {
                                    <input type="submit" class="btn btn-primary" 
                                       asp-area=""
                                       asp-controller="Teams"
                                       asp-action="Unfavourite"
                                       asp-route-id="@team.Id"
                                       value="Unfavourite" />
                                }
                            }
                            else
                            {
                                <input type="submit" class="btn btn-primary" 
                                       asp-area="" 
                                       asp-controller="Teams" 
                                       asp-action="Favourite" 
                                       asp-route-id="@team.Id"
                                       value="Favourite" />
                            }
                            @if (this.User.IsInRole("Administrator"))
                            {
                                <a class="btn btn-warning" 
                                   asp-area="Admin" 
                                   asp-controller="Teams" 
                                   asp-action="Edit" 
                                   asp-route-id="@team.Id">
                                    Edit
                                </a>
                                <input type="submit" class="btn btn-danger" 
                                       asp-area="Admin" 
                                       asp-controller="Teams" 
                                       asp-action="Delete" 
                                       asp-route-id="@team.Id"
                                       value="Delete" />
                            }
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>No teams to display</h2>
}

